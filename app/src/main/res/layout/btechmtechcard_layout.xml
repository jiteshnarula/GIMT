<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aboveStackRelLay"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stackRelLay"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/topRelLay"
            >

            <TextView
                android:id="@+id/btechTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topRelLay"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_dark_background"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                app:contentPaddingLeft="10dp"
                android:paddingRight="10dp"
                app:cardMaxElevation="15dp"
                android:id="@+id/cardView"
                android:background="@color/cardview_dark_background"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cardview_dark_background"
                    >

                    <ImageView
                        android:id="@+id/btechImageView"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                         />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/btechImageView">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/messageTextView"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite"
                            />
                    </ScrollView>
                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/cardProgressDialog"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>